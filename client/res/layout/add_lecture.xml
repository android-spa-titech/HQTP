<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/titlebar"
        android:gravity="center" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="111dp"
            android:layout_height="36dp"
            android:layout_marginLeft="6dp"
            android:src="@drawable/xhedder" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="add_class"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lecture_code_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="授業コード"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/lecture_code_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="授業コード"
            android:inputType="number" />

        <TextView
            android:id="@+id/lecture_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="授業名"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/lecture_name_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="授業名"
            android:inputType="text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1" >

            <Button
                android:id="@+id/lecture_add_cancel_button"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:text="キャンセル"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/lecture_add_button"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:text="追加"
                android:textColor="@color/white"  />
        </LinearLayout>

    </LinearLayout>

    <org.hqtp.android.ProfileView
        android:id="@+id/profileView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/shadow"
        android:orientation="horizontal" >

    </org.hqtp.android.ProfileView>

</LinearLayout>