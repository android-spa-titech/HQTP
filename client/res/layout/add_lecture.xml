<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="fill_vertical"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lecture_code_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="授業コード"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/lecture_code_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="授業コード"
            android:inputType="number" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/lecture_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="授業名"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/lecture_name_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="授業名"
            android:inputType="text" />

        <Button
            android:id="@+id/lecture_add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="追加" />

        <Button
            android:id="@+id/lecture_add_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="キャンセル" />
    </LinearLayout>

    <org.hqtp.android.ProfileView
        android:id="@+id/profileView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </org.hqtp.android.ProfileView>

</LinearLayout>